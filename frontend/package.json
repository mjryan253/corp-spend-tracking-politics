{
  "name": "corporate-spending-tracker-frontend",
  "version": "1.0.0",
  "description": "Frontend for Corporate Spending Tracker - Track corporate spending across lobbying, political contributions, and charitable grants",
  "main": "index.html",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/tailwind.css --watch",
    "build:js": "node build.js",
    "dev": "npm run build:css & npm run serve",
    "serve": "python -m http.server 3000",
    "serve:alt": "python server.py",
    "watch": "npm run build:css",
    "clean": "rm -rf dist/ node_modules/.cache/"
  },
  "keywords": [
    "corporate",
    "spending",
    "lobbying",
    "political",
    "charitable",
    "transparency",
    "tracker"
  ],
  "author": "Corporate Spending Tracker Team",
  "license": "MIT",
  "dependencies": {
    "alpinejs": "^3.13.3",
    "chart.js": "^4.4.0",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mjryan253/corp-spend-tracking-politics.git"
  },
  "bugs": {
    "url": "https://github.com/mjryan253/corp-spend-tracking-politics/issues"
  },
  "homepage": "https://github.com/mjryan253/corp-spend-tracking-politics#readme"
}
